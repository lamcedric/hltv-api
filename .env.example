# HLTV API Configuration

# Storage Backend: 'csv' or 'postgres'
STORAGE_BACKEND=csv

# CSV Storage Directory
CSV_OUTPUT_DIR=./data

# PostgreSQL Connection (when STORAGE_BACKEND=postgres)
DATABASE_URL=postgresql://hltv:hltv_password@localhost:5432/hltv

# Rate Limiting
RATE_LIMITING_ENABLE=false
RATE_LIMITING_FREQUENCY=2/3seconds

# Scraper Settings
SCRAPER_DELAY_SECONDS=2.0
SCRAPER_MAX_RETRIES=3
SCRAPER_BATCH_SIZE=100
